<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.InformacoesDoPersonal">

    <ImageView
        android:id="@+id/imagePersonal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@android:drawable/ic_menu_view"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/informacoes_personal_input_nome"/>

    <TextView
        android:id="@+id/informacoes_personal_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nome"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@+id/informacoes_personal_input_nome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/informacoes_personal_input_nome"
        app:layout_constraintBottom_toBottomOf="@id/informacoes_personal_input_nome"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/informacoes_personal_input_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Meu nome não é Kimberly"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@+id/informacoes_personal_nome"
        app:layout_constraintBottom_toBottomOf="@+id/informacoes_personal_nome"
        app:layout_constraintTop_toBottomOf="@+id/imagePersonal" />

</androidx.constraintlayout.widget.ConstraintLayout>